      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-light">Dashboard</h1>
          <p class="lead">
            <% if (!user) { %>
              <p class="lead text-muted">You are unauthorized</p>
              <p>
                <a href="login" class="btn btn-primary my-2">login</a>
                <a href="register" class="btn btn-dark my-2">register</a>
              </p>
            <% } else { %>
              <p> Welcome <%= user.name %>! </p>
            <% } %>
        </p>
        </div>
      </div>
    </section>
