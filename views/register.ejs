<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="NodeJS By aminshokripwa : Register">
    <meta name="author" content="aminshokripwa">
    <title>NodeJS By aminshokripwa : Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="css/index.css" rel="stylesheet">
  </head>
  <body class="text-center">
        <!-- Navigation: Start -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
          <a class="navbar-brand" href="#">NodeJS By aminshokripwa</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <%- include('partials/menu', {user: user, page_name: page_name}); %>
          </div>
        </nav>
        <!-- Navigation: End -->
    <main class="form-signin">
      <form action="" method="POST" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

      <div class="form-floating">
          <input type="text" id="name" name="name" value="<%= userData.name %>" class="form-control" placeholder="name" required autofocus>
          <label for="name" class="sr-only">name</label>
      </div>
        <div class="form-floating">
        <input type="text" id="family" name="family" value="<%= userData.family %>" class="form-control" placeholder="family" required>
        <label for="family" class="sr-only">family</label>
      </div>
      <div class="form-floating">
        <input type="text" id="username" name="username" value="<%= userData.username %>" class="form-control" placeholder="Username" required>
        <label for="username" class="sr-only">Username</label>
      </div>
      <div class="form-floating">
        <input type="email" id="email" name="email" value="<%= userData.email %>" class="form-control" placeholder="Email address" required>
        <label for="email" class="sr-only">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" id="password" name="password" value="<%= userData.password %>" class="form-control" placeholder="Password" required>
        <label for="password" class="sr-only">Password</label>
      </div>
        <button class="w-100 btn btn-lg btn-dark" type="submit">Register</button>

        <%- include('partials/flash_messages'); %>
        
        <br/>
        <p>or</p>
        <a href="/auth/facebook" class="btn btn-info" >Signup via Facebook</a>
        <br/><br/>
        <a href="/auth/google" class="btn btn-danger">Signup by Google</a>
      </form>
    </main>
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>
